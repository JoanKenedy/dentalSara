---
import Promo from "./Promo.astro"
---

<section class="w-full flex justify-center items-center" id="Promociones">
  <div class="w-full max-w-7xl px-4">
    <h2 class="text-center font-black text-4xl md:text-6xl">Conoce <strong class="gold-origin"> nuestras promociones</strong></h2>
    <div class="grid grid-cols-1 place-content-center mt-6 mb-6 gap-4 md:grid-cols-promo md:gap-3 lg:grid-cols-3 lg:gap-6">
      <Promo 
        promotion="/valley-1.jpeg"
        alt="Promoción diseño de sonrisa"
      />
      <Promo 
        promotion="/valley-2.jpeg"
        alt="Promoción Valoración gratuita"
      />
      <Promo 
        promotion="/valley-3.jpeg"
        alt="Promoción Carillas"
      />
     
    </div>
  </div>
</section>

<style>

  .gold-origin{
   color: #cc9900;
  } 

</style>
